<Defs>
	<RimLife.NarrativeTemplateDef>
		<defName>Health_SevereInjury</defName>

		<function>Intro</function>
		<syntacticType>FullSentence</syntacticType>
		<baseWeight>0.8</baseWeight>
		<fixedPolarity>Negative</fixedPolarity>
		<topic>Health</topic>

		<!-- 必须是“与健康伤口相关”的事实 -->
		<requiredTags>
			<li>health</li>
			<li>health.injury</li>
		</requiredTags>

		<!-- 在这些维度上有较高“纯度”的句子 -->
		<tagWeights>
			<li>
				<key>health</key>
				<value>1.0</value>
			</li>
			<li>
				<key>health.injury</key>
				<value>1.0</value>
			</li>
			<li>
				<key>health.severe</key>
				<value>0.8</value>
			</li>
			<li>
				<key>mood.negative</key>
				<value>0.3</value>
			</li>
		</tagWeights>

		<!-- 多语言文本：Dictionary 结构 -->
		<templates>
			<li>
				<key>English</key>
				<value>{SUBJECT_Label}'s {NOUN_Part} has a {ADJ_Severity} {NOUN_Injury}.</value>
			</li>
			<li>
				<key>ChineseSimplified</key>
				<value>{SUBJECT_Label}的{NOUN_Part}遭受了{ADJ_Severity}{NOUN_Injury}。</value>
			</li>
		</templates>
	</RimLife.NarrativeTemplateDef>

	<!-- === 模板 2: 处理情况说明 === -->
	<RimLife.NarrativeTemplateDef>
		<defName>Health_InjuryTendedInfo</defName>
		<function>Elaboration</function>
		<syntacticType>Fragment</syntacticType>
		<baseWeight>0.7</baseWeight>
		<topic>Health</topic>

		<requiredTags>
			<li>health</li>
			<li>health.injury</li>
			<li>health.tended</li>
		</requiredTags>
		<tagWeights>
			<li>
				<key>health</key>
				<value>1.0</value>
			</li>
			<li>
				<key>health.injury</key>
				<value>0.7</value>
			</li>
			<li>
				<key>health.tended</key>
				<value>1.0</value>
			</li>
		</tagWeights>

		<templates>
			<li>
				<key>English</key>
				<value>which has been {ADJ_Tending}.</value>
			</li>
			<li>
				<key>ChineseSimplified</key>
				<value>伤口{ADJ_Tending}。</value>
			</li>
		</templates>
	</RimLife.NarrativeTemplateDef>

</Defs>
